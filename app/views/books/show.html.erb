
<%= render 'books/userinfo', user: @user ,book_new: @book_new %>

<div class="col-md-8 offset-md-1">
  <h2>Book detail</h2>
    <table class="table">
      <tbody>
        <tr>
          <td><%= link_to user_path(@book.user_id) do %>
            <%= attachment_image_tag @book.user,:profile_image, size: "50x50",fallback:"no_image.jpg" %></br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to book_path(@book.id) do %>
            <%= @book.title %>
            <% end %>
          </td>
          <td><%= @book.body %></td>
          <% if @book.user == current_user %>
          <td><%= link_to "Edit" ,edit_book_path(@book) ,class: 'btn btn-success' %></td>
          <td><%= link_to "Destroy" ,book_path(@book.id), method: :delete,data:{confirm: "本当に消しますか？"} ,class: 'btn btn-danger' %></td>
          <% end %>
        </tr>
      </tbody>
    </table>