<div class="container">
  <div class="row">
    <div class="col-md-5 mx-auto">
      <h1>User info</h1>
      <% if @user.errors.any? %>
        <div class = "alert">
          <%= @user.errors.count %>error prohibited this obj from being saved:
          <ul>
            <% @user.errors.full_messages.each do |message| %>
               <li><%= message %></li>
             <% end %>
          </ul>
        </div>
       <% end %>

      <%= form_with model: @user,local: true do |f| %>
      <div class="form-group">
        <h5>Name</h5>
        <%= f.text_field :name ,class: "form-control" %>
      </div>

      <div class="form-group">
      <h5>Image</h5>
        <%= f.attachment_field :profile_image,class: "form-control-file" , placeholder:"選択されていません"  %>
      </div>

      <div class="form-group">
      <h5>Introduction</h5>
        <%= f.text_area :introduction ,class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.submit "Update User",class: "form-control btn btn-secondary w-25" %>
      </div>
      <% end %>

    </div>
  </div>
</div>