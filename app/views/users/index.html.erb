
  <%= render 'books/userinfo', user: @user ,book_new: @book_new %>

<div class="col-md-8 offset-md-1">
  <h2>Users</h2>
  <table class="table">
    <tbody>
      <tr>
        <th>image</th>
        <th>name</th>
      </tr>
      <% @users.each do |user| %>
      <tr>
        <td><%= attachment_image_tag user,:profile_image,size: "50x50",format:'jpeg',fallback:"no_image.jpg" %></td>
        <td><%= user.name %></td>
        <td><%= link_to "Show",user_path(user) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
