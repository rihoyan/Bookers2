<%= render 'books/userinfo', user: @user ,book_new: @book_new %>

<div class="col-md-8 offset-md-1">
  <h2>Books</h2>
  <table class="table">
    <tbody>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
      <% @books.each do |book| %>
     <tr>
       <td><%= link_to user_path(book.user_id) do %>
        <%= attachment_image_tag book.user,:profile_image,size: "50x50",format:'jpeg',fallback:"no_image.jpg" %>
         <% end %>
        </td>
        <td><%= link_to book_path(book.id) do %>
           <%= book.title %>
          <% end %>
        </td>
        <td><%= book.body %></td>
        <% end %>
      </tr>
    </tbody>
  </table>
</div>




